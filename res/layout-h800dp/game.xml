<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/game">

    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" 
        android:scaleType = "fitXY"/>
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" 
        android:scaleType = "fitXY"/>
    
    <ViewFlipper
        android:id="@+id/ViewFlipper01"
        android:layout_width="120dp"
        android:layout_height="188dp"
        android:layout_alignTop="@+id/ViewFlipper00"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/game_num0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/game_num1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/game_num2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/game_num3" />
        </LinearLayout>
    </ViewFlipper>

    <ViewFlipper
        android:id="@+id/ViewFlipper02"
        android:layout_width="120dp"
        android:layout_height="188dp"
        android:layout_alignTop="@+id/ViewFlipper01"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@+id/ViewFlipper01"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/game_num0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/game_num1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/game_num2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/game_num3" />
        </LinearLayout>
    </ViewFlipper>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical" >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/RL_player"
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:orientation="vertical" >

        <ImageView
        android:id="@+id/player1"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/player2"
        android:layout_marginLeft="30dp" />
    
    
    <ImageView
        android:id="@+id/player2"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="68dp"
        android:layout_toRightOf="@+id/player1" />
    
    
    <ImageView
        android:id="@+id/player3"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="68dp"
        android:layout_toRightOf="@+id/player2" />

    <ImageView
        android:id="@+id/player4"
        android:layout_width="120dp"
        android:layout_height="56dp"
        android:layout_alignTop="@+id/player3"
        android:layout_marginLeft="17dp"
        android:layout_toRightOf="@+id/player3" />

    </RelativeLayout>

    <ViewFlipper
        android:id="@+id/ViewFlipper00"
        android:layout_width="120dp"
        android:layout_height="188dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/RL_player"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="245dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/game_num0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:src="@drawable/game_num1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/game_num2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/game_num3" />
        </LinearLayout>
    </ViewFlipper>

    <ImageView
        android:id="@+id/score3"
        android:layout_width="160dp"
        android:layout_height="82dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/score2"
        android:layout_marginRight="30dp" />

    <ImageView
        android:id="@+id/score2"
        android:layout_width="160dp"
        android:layout_height="82dp"
        android:layout_above="@+id/linearLayout1"
        android:layout_toRightOf="@+id/score1"
        android:layout_marginLeft="35dp" />

    <ImageView
        android:id="@+id/score1"
        android:layout_width="165dp"
        android:layout_height="82dp"
        android:layout_alignRight="@+id/ViewFlipper00"
        android:layout_alignTop="@+id/score2" />

</RelativeLayout>