<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#00000000"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:padding="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/aa_07_01_silverframe" />

    <ImageButton
        android:id="@+id/iBexit"
        android:layout_width="116dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/iBnew"
        android:layout_below="@+id/iBnew"
        android:layout_marginTop="24dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/aa_07_03_btn_exit" />

    <ImageButton
        android:id="@+id/iBhow"
        android:layout_width="116dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/iBexit"
        android:layout_below="@+id/iBexit"
        android:layout_marginTop="14dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/aa_07_04_menu_pop" />

    <ImageButton
        android:id="@+id/iBnew"
        android:layout_width="116dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:background="#00000000"
        android:scaleType="fitXY"
        android:src="@drawable/aa_07_02_btn_new" />

</RelativeLayout>
